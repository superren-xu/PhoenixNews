<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="96dp">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_thumbnail"
        android:layout_toRightOf="@id/iv_thumbnail"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_updatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_thumbnail"
        android:layout_toRightOf="@id/iv_thumbnail"/>

    <ImageView
        android:id="@+id/iv_commentsall"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@id/iv_thumbnail"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:src="@drawable/ifeng_hot_list_new_comment"/>

    <TextView
        android:id="@+id/tv_commentsall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_thumbnail"
        android:layout_toLeftOf="@id/iv_commentsall"/>
</RelativeLayout>